Options +FollowSymLinks
Options -Indexes
DirectoryIndex index.html index.php

RewriteEngine on

# Permitir el acceso directo a archivos y directorios existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Permitir el acceso directo a archivos CSS, JS, im√°genes, etc.
RewriteRule \.(css|js|png|jpg|gif|ico)$ - [L]

# Redirigir el resto a index.php
RewriteCond $1 !^(index\.php|images|robots\.txt)
RewriteRule ^(.*)$ /practica/index.php/$1 [L,QSA]
